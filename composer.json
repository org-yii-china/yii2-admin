{
    "name": "yii-china/yii2-admin",
    "description": "基于yii2的rbac权限扩展包",
    "license":"YCNPG",
    "authors": [
        {
            "name": "huangxianan",
            "email": "xianan_huang@163.com"
        }
    ],

    "homepage":"www.yii-china.com",
    "minimum-stability": "dev",

    "require": {
        "yiisoft/yii2": "~2.0.7"
    },

    "require-dev": {
        "yiisoft/yii2-codeception": "~2.0"
    },

    "suggest": {
        "yiisoft/yii2-bootstrap": "Used when using layout 'left-menu', 'right-menu' or 'top-menu'"
    },

    "autoload": {
        "psr-4": {
            "mdm\\admin\\": ""
        }
    },

    "extra": {
        "branch-alias": {
            "dev-1.0.master": "1.0.x-dev",
            "dev-master": "2.x-dev"
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
